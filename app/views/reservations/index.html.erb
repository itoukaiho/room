<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Room_id</th>
      <th>User_id</th>
      <th>Room_image</th>
      <th>Room_name</th>
      <th>Introduce</th>
      <th>Total_price</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Created_at</th>
      <th>Id</th>

      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room_id %></td>
        <td><%= reservation.user_id %></td>
        
        <% if reservation.room.room_image? %>
  <td><%= image_tag reservation.room.room_image.url %></td>
<% else %>
  <td><%= image_tag ("room.png"),:size =>'75x50' %></td>
<% end %>
        <td><%= reservation.room.room_name%></td>
        <td><%= reservation.room.introduce%></td>
        <td><%= reservation.total_price.to_i%></td>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.created_at %></td>
        <td><%= reservation.id %></td>
       
        

       
    <% end %>
    </tbody>

    </tbody>
    </table>
    
<%= link_to 'Back', users_path %>



