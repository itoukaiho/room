<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Room image</th>
      <th>Room name</th>
      <th>Introduce</th>
      <th>Price</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.user_id %></td>
        <% if room.room_image? %>
        <td><%= image_tag room.room_image.url %></td>
      <% else %>
        <td><%= image_tag ("room.png"),:size =>'75x50' %></td>
        <% end %>
        <td><%= link_to room.room_name, room %></td>
        <td><%= room.introduce %></td>
        <td><%= room.price %></td>
        <td><%= room.address %></td>
       
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= button_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>合計数: <%= @room_total %></p>
   
<%= link_to 'New Room', new_room_path %>